<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
	<script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <header>
		<nav class="bg-white border-b border-gray-200 shadow-sm mb-3">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="flex justify-between h-16">
					<div class="flex">
						<div class="-ml-2 mr-2 flex items-center">
							<a class="text-xl font-semibold text-gray-900" href="/"">PAH Solutions</a>
						</div>
						<div class="flex sm:hidden">
							<button type="button" class="text-gray-500 hover:text-gray-600 focus:outline-none focus:text-gray-600" aria-label="Toggle navigation">
								<svg class="h-6 w-6" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor">
									<path d="M4 6h16M4 12h16m-7 6h7"></path>
								</svg>
							</button>
						</div>
					</div>

					<div class="hidden sm:flex sm:items-center sm:ml-6">
						<div class="flex space-x-4">
							<a href="/" class="text-gray-500 hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium">Home</a>
							<a href="/contact" class="text-gray-500 hover:text-gray-700 px-3 py-2 rounded-md text-sm font-medium">Contact</a>
						</div>
					</div>
				</div>
			</div>

			<div class="sm:hidden">
				<div class="px-2 pt-2 pb-3 space-y-1">
					<a href="#" class="text-gray-700 block px-3 py-2 rounded-md text-base font-medium">Home</a>
					<a href="#" class="text-gray-700 block px-3 py-2 rounded-md text-base font-medium">Contact</a>
				</div>
			</div>
		</nav>
    </header>

	<div class="container mx-auto">
		<main class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-t text-gray-600">
		<div class="container mx-auto px-4 py-4">
			&copy; 2024 - PAH Solutions LLC - <a href="#" class="text-blue-600 hover:text-blue-800">Privacy</a> - <a href="#" class="text-blue-600 hover:text-blue-800">Contact</a>
		</div>
	</footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
