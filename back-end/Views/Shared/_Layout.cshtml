<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"]</title> 
        <link href="css/output.css" rel="stylesheet">
    </head>
    <body> 
        <header>
            <div class="navbar" style="background-color: #2F4F4F;">
                <div class="flex-1">
                    <a class="btn btn-ghost text-xl text-white">PAH Solutions</a>
                </div>
                <div class="flex-none">
                    <ul class="menu menu-horizontal px-1 hidden sm:flex">
                        <li><a href="/" class="text-gray-300 hover:text-gray-100 px-3 py-2 rounded-md text-sm font-medium">Home</a></li>
                        <li><a href="/contact" class="text-gray-300 hover:text-gray-100 px-3 py-2 rounded-md text-sm font-medium">Contact</a></li>
                    </ul>
                    <div class="sm:hidden">
                        <button id="mobile-menu-button" type="button" class="text-gray-300 hover:text-gray-100 focus:outline-none focus:text-gray-100" aria-label="Toggle navigation">
                            <svg class="h-6 w-6" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor">
                                <path d="M4 6h16M4 12h16m-7 6h7"></path>
                            </svg>
                        </button>
                    </div>
                </div>
                <div id="mobile-menu" class="hidden sm:hidden">
                    <ul class="menu menu-vertical p-2" style="background-color: #2F4F4F; w-full">
                        <li><a href="/" class="text-gray-300 block px-3 py-2 rounded-md text-base font-medium hover:text-gray-100">Home</a></li>
                        <li><a href="/contact" class="text-gray-300 block px-3 py-2 rounded-md text-base font-medium hover:text-gray-100">Contact</a></li>
                    </ul>
                </div>
            </div>
            <script>
                document.getElementById('mobile-menu-button').addEventListener('click', function () {
                    const menu = document.getElementById('mobile-menu');
                    menu.classList.toggle('hidden');
                });
            </script>
        </header>
        <main>
            @RenderBody()
        </main>
        <footer style="background-color: #2F4F4F;" class="footer footer-center p-4 text-base-content">
            <aside>
                <p>Copyright © 2024 - All right reserved by PAHSolutions LLC</p>
            </aside>
        </footer>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
